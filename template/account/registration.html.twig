{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h1 class="mt-3 col-3">Inscription</h1>


    <div class="container mt-3 col-4">

        {{ form_start(registrationForm) }}
        <div class="form-group">
            <label for="email">Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="password">Accepter les conditions d'utilisations</label>
            {{ form_widget(registrationForm.termsAccepted) }}
        </div>
        <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}